{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 23,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "default",
      "displayName": "Default Config",
      "description": "Default build using Unix Makefiles generator",
      "generator": "Unix Makefiles",
      "binaryDir": "${sourceDir}/build",
      "toolchainFile": "conan_paths.cmake",
      "cacheVariables": {
        "ENABLE_TESTING" : "ON",
        "USE_SANITIZERS" : "ON"
      }
    }
  ]
}
